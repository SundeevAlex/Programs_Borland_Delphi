procedure TForm1.FormActivate(Sender: TObject);
label a1,a2;
var
dat:integer;
begin
prosm:=0;
AssignFile(f, 'Sound.nst');                         // ЗВУКОВЫЕ НАСТРОЙКИ
{$i-}
Reset(f);
{$i+}
if IOResult <> 0 then
   begin
   AssignFile(f1, 'Sound.nst');
   rewrite(f1);
   write(f1,'0');
   closefile(f1);
   soun:=0;
   exit;
   end;
readln(f,s);
soun:=StrToInt(s);
closefile(f);
if soun=1 then n2.checked:=true
          else n2.checked:=false;

{if soun=1 then CheckBox1.Checked:=true
          else CheckBox1.Checked:=false;}
if nzn<>5 then begin form3.sound(star);nzn:=5;end;
                                  // время?
Time := Now(); // получить системное время
s:=FormatDateTime('hh:mm:ss',Time);
delete(s,3,6);
i:=strtoint(s);
if i<7 then goto a2;           // прога начнет сама напоминать
                               // о подпечатке НОТАМ
                               // при запуске ее, после 7-00

//AssignFile(f, 'Date.txt');        //файл с датой
//{$i-}
//Reset(f);
//{$i+}
{if IOResult <> 0 then
   begin
   dat:=0;
   goto a1;
   end;
readln(f,dat);
closefile(f);
a1:
s:=FormatDateTime('dd',Now());
i:=strtoint(s);
if (i=dat) then begin goto a2;end;
AssignFile(f, 'Date.txt');       }
//{$i-}
//Rewrite(f);
//{$i+}
{if IOResult <> 0 then
   begin
   MessageDlg('Отсутствует файл "Date.txt"',
   mtError,[mbOk],0);
   goto a2;
   end;
s:=FormatDateTime('dd',Now());
writeln(f,s);
closefile(f);
Button2Click(Sender);  }
a2:
end;

procedure TForm1.Button2Click(Sender: TObject);
begin
 prosm:=1;
 button2.Enabled:=false;
 cursor:=crhourglass;
 form6.show;
 cursor:=crDefault;
 button2.Enabled:=true;
end;

procedure TForm1.Button6Click(Sender: TObject);
begin
 form1.close;
end;


procedure TForm1.N4Click(Sender: TObject);
begin
winhelp(Form1.Handle,'sqroot.hlp',HELP_CONTEXT,1);
end;

procedure TForm1.N2Click(Sender: TObject);
begin
if n2.checked=true then n2.checked:=false
                   else n2.checked:=true;
if n2.checked=true then begin soun:=1;form3.sound(star);end
                   else soun:=0;
AssignFile(f, 'Sound.nst');
{$i-}
Rewrite(f);
{$i+}
if IOResult <> 0 then
   begin
   AssignFile(f1, 'Sound.nst');
   rewrite(f1);
   write(f1,'0');
   closefile(f1);
   soun:=0;
   exit;
   end;
s:=IntToStr(soun);
writeln(f,s);
closefile(f);

end;

procedure TForm1.N5Click(Sender: TObject);
begin
AboutForm.Top :=
Trunc(Form1.Top + Form1.Height/2 - AboutForm.Height/2);
AboutForm.Left :=Trunc (Form1.Left +Form1 .Width/2
- AboutForm. Width/2 ); AboutForm. ShowModal;
end;

