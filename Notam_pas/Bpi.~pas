procedure TForm4.Button9Click(Sender: TObject);
begin
form3.sound(err);
j:=MessageDlg('Удалить направление: '+ComboBox2.text+'?',
   mtWarning,[mbOk,mbCancel],0);
if (j=2)or(j=0) then exit;
ASSIGNfile(F,ComboBox2.text+'.npr');
{$i-}
reset(f);
{$i+}
if IOResult <> 0 then
  begin
  form3.sound(err);
  MessageDlg('Ошибка доступа к файлу '+ComboBox2.text+'.npr',
  mtError,[mbOk],0);
  exit;
  end;
  closefile(f);
  erase(f);
  form3.sound(okk);
MessageDlg('Направление: '+ComboBox2.text+' удалено.',
   mtInformation,[mbOk],0);
Button8.Enabled:=false;
Button9.Enabled:=false;
Button12.enabled:=false;
Button13.enabled:=false;
Memo2.Clear; Memo3.Clear;

 j:=ComboBox2.itemindex;
 ComboBox2.Items[j]:='';
 ComboBox2.itemindex:=-1;
 ComboBox3.itemindex:=-1;ComboBox3.TEXT:='';
end;

