function GetPath(mes: string):string;// для обзора папок
var
Root: string; // корневой каталог
pwRoot : PWideChar;
Dir: string;
begin
Root := '';
GetMem(pwRoot, (Length(Root)+1) * 2);
pwRoot := StringToWideChar(Root, pwRoot, MAX_PATH*2);
if selectDirectory(mes, pwRoot, Dir) then
if length(Dir) =2 then GetPath := Dir+'\'
                  else GetPath := Dir
                  else GetPath := '';
end;

procedure TForm4.See;       // просмотр введенных пунктов 1
var
ss,ss1:string[4];
strok:string;
begin
AssignFile(f, 'Russia.txt');
{$i-}
Reset(f);
{$i+}
if IOResult <> 0 then
   begin
   form3.sound(err);
   MessageDlg('Отсутствует файл "Russia.txt"',
   mtError,[mbOk],0); exit;
   end;
closefile(f);
strok:=''; I:=0;
for j:=0 to Memo1.Lines.Count-1 do
   begin
   AssignFile(f, 'Russia.txt');
   Reset(f);
   ss:=Memo1.Lines[j];
   while not EOF(f) do
       begin
       readln(f, s1);
       ss1:=s1;
       if ss=ss1 then
          begin
          i:=i+1;strok:=strok+IntToStr(i)+'.'+s1+#13;
          end;
       end;
   CloseFile(f);
   end;
IF strok<>'' then
   begin
   form3.sound(okk);
   if i<>j then
   ShowMessage(strok+#13+'ВНИМАНИЕ!!!'+#13+
   'Найдены не все пункты!!! '+IntToStr(j-i)+
   ' из '+IntToStr(j)+' не найдено'+#13+
   'Проверьте правильность ввода индексов!')
             else ShowMessage(strok)
   end
             else begin form3.sound(err);ShowMessage('Ни чего не найдено!!!');end
end;

