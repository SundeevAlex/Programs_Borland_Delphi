procedure TForm4.Button10Click(Sender: TObject);
label a1,a2;
begin                             // сохранение новых направлений

if combobox3.text='' then
   begin
      form3.sound(err);
      MessageDlg('Выберите страну !',mterror,[mbOk],0);
      combobox3.SetFocus;
      exit;
   end;
if CheckBox2.State = cbChecked then
  begin
  memo2.clear;
  memo2.Text:='ВСЕ';
  goto a2;
  end;
for j:=0 to Memo2.Lines.Count-1 do
   IF (LENGTH(Memo2.Lines[j])<3) THEN
      BEGIN
      form3.sound(err);
      MessageDlg('Проверьте правильность ввода'+#13+
      '4-х буквенных индексов !',mterror,[mbOk],0);
      memo2.SetFocus;
      exit;
      END;
a2:
if memo3.text='' then goto a1;
for j:=0 to Memo3.Lines.Count-1 do
   IF ((Memo3.Lines[j])=''){or(memo3.text='')} THEN
a1:   BEGIN
      form3.sound(err);
      MessageDlg('Проверьте правильность'+#13+
      'ввода серий !',mterror,[mbOk],0);
      memo3.SetFocus;
      exit;
      END;
ASSIGNfile(F,ComboBox2.text+'.npr');
{$i-}
reset(f);
{$i+}
if IOResult <> 0 then
  begin
  form3.sound(err);
  j:=MessageDlg('Такого направления не существует!'+#13+#13+
  'Сохранить как новое направление?'
  ,mtwarning,[mbOk,mbcancel],0);
  if (j=0)or(j=2) then begin  {Button10.Enabled:=false;}exit;end;
  ASSIGNfile(F1,ComboBox2.text+'.npr');
  rewrite(f1);
  writeln(f1, combobox3.text);
  for j:=0 to Memo3.Lines.Count-1 do writeln(f1, Memo3.Lines[j]);
  if CheckBox2.State = cbChecked then
  write(f1, Memo2.Text)
  else
  for j:=0 to Memo2.Lines.Count-1 do
  if j<Memo2.Lines.Count-1 then
    writeln(f1, Memo2.Lines[j])
    else
    write(f1, Memo2.Lines[j]);
  closefile(f1);
  form3.sound(okk);
  MessageDlg('Новое направление сохранено!', mtInformation,[mbOk],0);
  Button10.Enabled:=false;
  exit;
  end;
closefile(f);
ASSIGNfile(F,ComboBox2.text+'.npr');
rewrite(f);
  writeln(f, combobox3.text);
  for j:=0 to Memo3.Lines.Count-1 do writeln(f, Memo3.Lines[j]);
for j:=0 to Memo2.Lines.Count-1 do
if j<Memo2.Lines.Count-1 then
  writeln(f, Memo2.Lines[j])
  else
  write(f, Memo2.Lines[j]);
closefile(f);
form3.sound(okk);
MessageDlg('Изменения сохранены!', mtInformation,[mbOk],0);
Button10.Enabled:=false;
end;

