end;

Procedure TForm4.DOS_FILE;            // печать в  файл
begin
Sozdat;

Razbiv;   // разбивка на страницы...

assignfile(f1,edit1.text);            // проверка куда записывать
{$i-}
rewrite(f1);                          // Сохранение в файл Listpred
{$i+}
if IOResult <> 0 then
  begin
  form3.sound(err);
  MessageDlg('Проверьте правильность пути:'+#13+
  edit1.text,mtError,[mbOk],0);
  exit;
  end;
assignfile(f,'Otchet1.txt');
reset(f);                     
while not eof(f) do
  begin
  readln(f,s);
  writeln(f1,s);
  end;
CloseFile(f);erase(f);
CloseFile(f1);
button4.caption:='Печать';
Button4.enabled:=true;
form3.sound(okk); cursor:=crDefault;
if RadioGroup2.ItemIndex=2 then
                           pech1
                           else
             MessageDlg('Сохранено в файл: '+edit1.text,mtinformation,[mbOk],0);
end;

