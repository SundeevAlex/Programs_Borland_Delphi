begin                       // ВХОД  в режим редактирования
s1:=InputBox('Доступ ограничен!','Для входа в режим введите пароль:','');
IF s1='' then exit;
if s1='6606' then
  begin
  RadioGroup2.Enabled:=true;
  Edit1.Enabled:=true;
  Button6.Enabled:=true;
  ComboBox2.Enabled:=true;//ComboBox3.Enabled:=true;//Memo3.Enabled:=true;
  Panel3.enabled:=true;
  Panel4.enabled:=true;
  Panel5.enabled:=true;
  ComboBox2.SETfocus;
  ComboBox5.Enabled:=true;
  memo5.Enabled:=true;
  button5.Enabled:=false;
  radiogroup1.font.Color:=002222;
  radiogroup2.font.Color:=002222;
  panel4.font.Color:=002222;
  panel3.font.Color:=002222;
  panel5.font.Color:=002222;
  edit1.font.Color:=002222;
  combobox2.font.Color:=002222;
  combobox3.font.Color:=002222;
  combobox5.font.Color:=002222;
  memo2.font.Color:=002222;
  memo3.font.Color:=002222;
  memo5.font.Color:=002222;
  end
  else begin
  //MediaPlayer1.Play;
  form3.sound(err);
  messageDlg('Неверный пароль!!!',mtError,[mbOk],0);
  end;
end;

procedure TForm4.ComboBox2KeyPress(Sender: TObject; var Key: Char);
begin
case Key of
'/': key:=Chr(0);
'\': key:=Chr(0);
'*': key:=Chr(0);
'.': key:=Chr(0);
',': key:=Chr(0);
'?': key:=Chr(0);
'!': key:=Chr(0);
//else Key :=Chr(0);
end;
checkbox2.enabled:=true;
Button10.enabled:=true;
memo2.Enabled:=true;
memo3.Enabled:=true;
combobox3.Enabled:=true;
combobox2.setfocus;
end;

