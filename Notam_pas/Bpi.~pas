Procedure TForm4.Razbiv;                     // разбивка на страницы для ДОС
Label a1;
begin
assignfile(f1,'Otchet1.txt'{edit1.text});            // проверка куда записывать
{$i-}
rewrite(f1);
{$i+}
if IOResult <> 0 then
  begin
  form3.sound(err);
  MessageDlg('Проверьте правильность пути:'+#13+
  edit1.text,mtError,[mbOk],0);
  exit;
  end;
assignfile(f,'Otchet.txt');
reset(f);                     //запись TXT файла листа предупреждения
sDos:='Стр. N 1';
//Perevod;
if RadioGroup2.ItemIndex=0 then perevod;
writeln(f1,sDos);
sDos:=FormatDateTime('dd.mm.yy',Now())+' '+'Тм'+FormatDateTime('hh:mm',Now());
//Perevod;
if RadioGroup2.ItemIndex=0 then perevod;
writeln(f1,sDos);
sDos:='                            БЮЛЛЕТЕНЬ ПРЕДПОЛЕТНОЙ ИНФОРМАЦИИ';
//Perevod;
if RadioGroup2.ItemIndex=0 then perevod;
writeln(f1,sDos);
if Radiobutton1.checked=true then s:=combobox1.text
                             else s:='';
sDos:='                   Аэродром вылета: БАРНАУЛ  Направление: '+s;
if RadioGroup2.ItemIndex=0 then perevod;
//Perevod;
writeln(f1,sDos);
writeln(f1,'');
Shapka;
a:=9;b:=1;
while not eof(f) do
  begin
  a:=a+1;
  readln(f,sDos);
  s1:=sDos;
  if a=62 then
     if (s1[1]<>' ') then
       begin
       {if (RadioGroup2.ItemIndex= 0)THEN }writeln(f1,#12);
                                    {else writeln(f1,'');}
       b:=b+1;
       sDos:='Стр. N '+IntToStr(b);
       if (RadioGroup2.ItemIndex= 0)THEN perevod;
       //Perevod;
       writeln(f1,sDos);
       Shapka;
       sDos:=s1;
       if (RadioGroup2.ItemIndex= 0)THEN perevod;
       //Perevod;
       writeln(f1,sDos);
       a:=6;
       goto a1;
       end;
  sDos:=s1;
//  Perevod;
  if (RadioGroup2.ItemIndex= 0)THEN perevod;
  writeln(f1,sDos);
  if a=62 then
     begin
     a:=5;
     b:=b+1;
     readln(f,sDos);
       if (RadioGroup2.ItemIndex= 0)THEN perevod;
     //Perevod;
     s1:=sDos;
     readln(f,s);
     if s='' then
             writeln(f1,sDos)
             else
             begin
             {if (RadioGroup2.ItemIndex= 0)THEN} writeln(f1,#12);
                                         {else writeln(f1,'');  }
            // writeln(f1,#12{'+'});
             sDos:='Стр. N '+IntToStr(b);
       if (RadioGroup2.ItemIndex= 0)THEN perevod;
             //Perevod;
             writeln(f1,sDos);
             Shapka;
             sDos:=s1;
       if (RadioGroup2.ItemIndex= 0)THEN perevod;
             //Perevod;
             if sDos<>'' then writeln(f1,sDos);
             sDos:=s;
        if (RadioGroup2.ItemIndex= 0)THEN perevod;
            //Perevod;
             writeln(f1,sDos);
             a:=7;
             goto a1;
             end;
     {if (RadioGroup2.ItemIndex= 0)THEN }writeln(f1,#12);
                                  {else writeln(f1,'');  }
     //writeln(f1,#12{'+'});
     sDos:='Стр. N '+IntToStr(b);
       if (RadioGroup2.ItemIndex= 0)THEN perevod;
    //Perevod;
     writeln(f1,sDos);
     Shapka;
a1:  end;
  end;
CloseFile(f); Erase(f);
CloseFile(f1);
                                // удаление в конце не нужной шапки
assignfile(f1,'Otchet1.txt');
reset(f1);
i:=1;
while not eof(f1) do          //проверка есть ли лишняя шапка в конце
  begin
  readln(f1,s);i:=i+1;
//  readln(f1,s);i:=i+1;
//  readln(f1,s1);i:=i+1;
  end;
CloseFile(f1);
if (sDos[1]='='){and(s[1]='')and(s1[1]='')} then
   begin                         //запись в отчет без лишней шапки
   assignfile(f1,'Otchet1.txt');
   reset(f1);
   assignfile(f,'Otchet.txt');
   rewrite(f);
      for j:=1 to i-7 do
      begin
      readln(f1,sDos);
      writeln(f,sDos);
      end;
   CloseFile(f);
   CloseFile(f1);
   assignfile(f1,'Otchet1.txt');// препис в отчет1
   rewrite(f1);
   assignfile(f,'Otchet.txt');
   reset(f);
   while not eof(f) do
     begin
     readln(f,sDos);
     writeln(f1,sDos);
     end;
   CloseFile(f);erase(f);
   CloseFile(f1);
   end;
end;

Procedure TForm4.Sozdat;
begin
FORM5.memo1.clear;
assignfile(f1,'Otchet.txt');
rewrite(f1);
CloseFile(f1);

assignfile(f1,'Otchet.txt');
append(f1);

if Radiobutton1.checked=true
   then Napr:=ComboBox1.Text+'.npr'
   else Napr:='Other.txt';
ASSIGNfile(F,Napr);
{$i-}
reset(f);
{$i+}
if IOResult <> 0 then
  begin
  form3.sound(err);
  MessageDlg('Ошибка доступа к файлу '+Napr,
  mtError,[mbOk],0);
  exit;
  end;
readln(f, PAPKA);         // считывание страны для листа пред
ii:=1; jj:=1;
while not eof(f) do
  begin
  readln(f, s);
  if length(s)<3 then begin ser[ii]:=s;ii:=ii+1;end //счит серий для бпи
                 else begin gor[jj]:=s;jj:=jj+1;end;//счит городов для бпи
  end;
closefile(f);
CANCEL:=0;
ii:=ii-1;jj:=jj-1;
for x:=1 to jj do
  begin
  ind:=gor[x];
  for y:=1 to ii do
     BEGIN
     put:=PAPKA+'\'+ser[y]+'\';
     if FindFirst(put+'*.txt', faAnyFile, SearchRec) =0 then  Poisk;
     END;
if cancel=0 then
   begin
     SDOS:=ind+' - нет ни одного НОТАМ.';
     FORM5.Memo1.Lines.Add(SDOS);
     //if RadioGroup2.ItemIndex=0 then perevod;
     //writeln(f1,SDOS);//cancel:=1;
     //writeln(f1);
   end;
   cancel:=0;
  end;

CloseFile(f1); // закрытие файла отчета
if checkbox3.checked=true then
{if FORM5.Memo1.Lines[0]<>'' then }FORM5.Showmodal;
end;

