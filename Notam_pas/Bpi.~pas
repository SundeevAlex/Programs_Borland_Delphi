procedure TForm4.Button2Click(Sender: TObject);
LABEL A1;
begin
if combobox4.text='' then
   begin
      form3.sound(err);
      MessageDlg('Выберите страну !',mterror,[mbOk],0);
      exit;
   end;
for j:=0 to Memo1.Lines.Count-1 do
   IF LENGTH(Memo1.Lines[j])<4 THEN
      BEGIN
      form3.sound(err);
      MessageDlg('Проверьте правильность ввода'+#13+
      '4-х буквенных индексов !',mterror,[mbOk],0);
      memo1.SetFocus;
      exit;
      END;
if memo4.text='' then goto a1;
for j:=0 to Memo4.Lines.Count-1 do
   IF ((Memo4.Lines[j])='') THEN
a1:   BEGIN
      form3.sound(err);
      MessageDlg('Проверьте правильность'+#13+
      'ввода серий !',mterror,[mbOk],0);
      memo4.SetFocus;
      exit;
      END;

  ASSIGNfile(F,'Other.txt');
  rewrite(f);
  writeln(f, combobox4.text);
  for j:=0 to Memo4.Lines.Count-1 do writeln(f, Memo4.Lines[j]);
  for j:=0 to Memo1.Lines.Count-1 do
    writeln(f, Memo1.Lines[j]);
  closefile(f);
  form3.sound(okk);
  MessageDlg('Изменения сохранены.', mtInformation,[mbOk],0);
  Button2.Enabled:=false;
  Button3.enabled:=true;
  Button4.enabled:=true;
end;

Procedure TForm4.PEREVOD;   // перевод из вин в дос
var
js:integer;
begin
for js:=1 to length(Sdos) do
  if (ord(sdos[js])>191)and(ord(sdos[js])<240) then
                           sdos[js]:=(chr(ord((sdos[js]))-64))
                      else
     if (ord(sdos[js])>239)and(ord(sdos[js])<256) then
                           sdos[js]:=(chr(ord((sdos[js]))-16))
                      else
                           sdos[js]:=(chr(ord((sdos[js]))));
end;

Procedure TForm4.Poisk;
Label a1,a2,a3,a4;
//var cancel:integer;
begin
//  cancel:=0;
  assignfile(f,put+SearchRec.Name); //открыли нотам
  reset(f);
  readln(f,Num);                  
  readln(f,ad);
  readln(f,s);//пропускаем поле Щ
  readln(f,s);
  delete(s,1,2);// поле А
  if ind='ВСЕ' then s:='ВСЕ';
  if s=ind then
      begin
      readln(f,s);
      delete(s,1,2);// поле Б
      P_B:=s[5]+s[6]+s[3]+s[4]+s[1]+s[2]+' '+s[8]+s[9]+s[10]+s[11];
      if CheckBox1.State = cbChecked then          //  дате действует?  ( 1 )
        begin
        s:=FormatDateTime('dd.mm.yyyy',Now());
        i:=StrToInt(P_B[5]+P_B[6]);
        dd:=StrToInt(s[1]+s[2]);mm:=StrToInt(s[4]+s[5]);yy:=StrToInt(s[9]+s[10]);
        IF i<yy then goto a3;         //если год меньше
        j:=StrToInt(P_B[3]+P_B[4]);  //если месяц меньше а год не больше
        IF (i=yy)and(j<mm) then goto a3;
        k:=StrToInt(P_B[1]+P_B[2]);  // если месяц равен,то сверяем числа
        IF (i=yy)and(j=mm)and(k<=dd) then goto a3;
        IF (i=yy)and(j=mm)and(k=dd+1) then goto a3; // если с завтра действует
        IF (i=yy)and(mm=1)and(dd=31)and(j=2)and(k=1) then goto a3; // ЯНВ
        IF (i=yy)and(mm=2)and((dd=28)or(dd=29))and(j=3)and(k=1) then goto a3;//ФЕВ
        IF (i=yy)and(mm=3)and(dd=31)and(j=4)and(k=1) then goto a3;  // МАРТ
        IF (i=yy)and(mm=4)and(dd=30)and(j=5)and(k=1) then goto a3;  // АПР
        IF (i=yy)and(mm=5)and(dd=31)and(j=6)and(k=1) then goto a3;  // МАЙ
        IF (i=yy)and(mm=6)and(dd=30)and(j=7)and(k=1) then goto a3;  // ИЮН
        IF (i=yy)and(mm=7)and(dd=31)and(j=8)and(k=1) then goto a3;  // ИЮЛ
        IF (i=yy)and(mm=8)and(dd=31)and(j=9)and(k=1) then goto a3;  // АВГ
        IF (i=yy)and(mm=9)and(dd=30)and(j=10)and(k=1) then goto a3; // СЕН
        IF (i=yy)and(mm=10)and(dd=31)and(j=11)and(k=1) then goto a3;// ОКТ
        IF (i=yy)and(mm=11)and(dd=30)and(j=12)and(k=1) then goto a3;// НОЯ
        IF (i=yy+1)and(mm=12)and(dd=31)and(j=1)and(k=1) then goto a3// ДЕК
                             else goto a1;
        end;                                      // конец даты
a3:   s:='';readln(f,s);
      delete(s,1,2);// поле Ц
      if (s[1])<>'П' then begin
                          P_C:=s[5]+s[6]+s[3]+s[4]+s[1]+s[2];
                          for i:=length(P_C)+1 to length(s) do P_C:=p_c+s[i];
                          end
                          else P_C:=s;
      readln(f,s);//пропускаем E)
      for i:=length(ad) to 16 do ad:=ad+' ' ;
      sDOS:=ad+' ОТ:'+P_B+' ДО:';
      if RadioGroup2.ItemIndex=0 then perevod;
      write(f1,sDOS);
      s:='';s:=P_C;
      for i:=length(P_C) to {39}34 do s:=s+' ';
      sDOS:=s+num;
      if RadioGroup2.ItemIndex=0 then perevod;
      writeln(f1,sDOS);
      while not eof(f) do
         begin
         readln(f,s);
         sDOS:=s;
         if RadioGroup2.ItemIndex=0 then perevod;
         writeln(f1,'                 '+sDOS);
         end;
         writeln(f1);cancel:=1;
     end; // конец если индексы совпадают
a1:CloseFile(f);
  while (FindNext(SearchRec) = 0) do
      begin
  assignfile(f,put+SearchRec.Name); //открыли нотам
  reset(f);
  readln(f,Num);
  readln(f,ad);
  readln(f,s);//пропускаем поле Щ
  readln(f,s);
  delete(s,1,2);// поле А
  if ind='ВСЕ' then s:='ВСЕ';
  if s=ind then
      begin
      readln(f,s);
      delete(s,1,2);// поле Б
      P_B:=s[5]+s[6]+s[3]+s[4]+s[1]+s[2]+' '+s[8]+s[9]+s[10]+s[11];
      if CheckBox1.State = cbChecked then          //  дате действует? ( 2 )
        begin
        s:=FormatDateTime('dd.mm.yyyy',Now());
        i:=StrToInt(P_B[5]+P_B[6]);
        dd:=StrToInt(s[1]+s[2]);mm:=StrToInt(s[4]+s[5]);yy:=StrToInt(s[9]+s[10]);
        IF i<yy then goto a4;         //если год меньше
        j:=StrToInt(P_B[3]+P_B[4]);  //если месяц меньше а год не больше
        IF (i=yy)and(j<mm) then goto a4;
        k:=StrToInt(P_B[1]+P_B[2]);  // если месяц равен,то сверяем числа
        IF (i=yy)and(j=mm)and(k<=dd) then goto a4;
        IF (i=yy)and(j=mm)and(k=dd+1) then goto a4; // если с завтра действует
        IF (i=yy)and(mm=1)and(dd=31)and(j=2)and(k=1) then goto a4;
        IF (i=yy)and(mm=2)and((dd=28)or(dd=29))and(j=3)and(k=1) then goto a4;//ФЕВ
        IF (i=yy)and(mm=3)and(dd=31)and(j=4)and(k=1) then goto a4;  // МАРТ
        IF (i=yy)and(mm=4)and(dd=30)and(j=5)and(k=1) then goto a4;  // АПР
        IF (i=yy)and(mm=5)and(dd=31)and(j=6)and(k=1) then goto a4;  // МАЙ
        IF (i=yy)and(mm=6)and(dd=30)and(j=7)and(k=1) then goto a4;  // ИЮН
        IF (i=yy)and(mm=7)and(dd=31)and(j=8)and(k=1) then goto a4;  // ИЮЛ
        IF (i=yy)and(mm=8)and(dd=31)and(j=9)and(k=1) then goto a4;  // АВГ
        IF (i=yy)and(mm=9)and(dd=30)and(j=10)and(k=1) then goto a4; // СЕН
        IF (i=yy)and(mm=10)and(dd=31)and(j=11)and(k=1) then goto a4;// ОКТ
        IF (i=yy)and(mm=11)and(dd=30)and(j=12)and(k=1) then goto a4;// НОЯ
        IF (i=yy+1)and(mm=12)and(dd=31)and(j=1)and(k=1) then goto a4// ДЕК
                             else goto a2;

        end;                                      // конец даты
a4:   s:='';readln(f,s);
      delete(s,1,2);// поле Ц
      if (s[1])<>'П' then begin
                          P_C:=s[5]+s[6]+s[3]+s[4]+s[1]+s[2];
                          for i:=length(P_C)+1 to length(s) do P_C:=p_c+s[i];
                          end
                          else P_C:=s;
      readln(f,s);//пропускаем E)
      for i:=length(ad) to 16 do ad:=ad+' ' ;
      sDOS:=ad+' ОТ:'+P_B+' ДО:';
      if RadioGroup2.ItemIndex=0 then perevod;
      write(f1,sDOS);
      s:='';s:=P_C;
      for i:=length(P_C) to {39}34 do s:=s+' ';
      sDOS:=s+num;
      if RadioGroup2.ItemIndex=0 then perevod;
      writeln(f1,sDOS);
      while not eof(f) do
         begin
         readln(f,s);
         sDOS:=s;
         if RadioGroup2.ItemIndex=0 then perevod;
         writeln(f1,'                 '+sDOS);
         end;
         writeln(f1); cancel:=1;
      end; // конец если индексы совпадают
a2:   CloseFile(f);
      end;
{if cancel=0 then
   begin
     SDOS:=ind+'             НЕТ НОТАМ.'+put;
     if RadioGroup2.ItemIndex=0 then perevod;
     writeln(f1,SDOS);//cancel:=1;
   end;      }

end;

