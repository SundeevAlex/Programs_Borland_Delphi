Procedure gluk;
var
xx:integer;
begin
if form4.RadioGroup2.ItemIndex=0 then
  if sDos<>#12 then
    for xx:=1 to length(sDos) do  // перевод из доса в винду
      if (ord(sDos[xx])>127)and(ord(sDos[xx])<176) then
                           sDos[xx]:=(chr(ord((sDos[xx]))+64))
                      else
      if (ord(sDos[xx])>223)and(ord(sDos[xx])<240) then
                           sDos[xx]:=(chr(ord((sDos[xx]))+16))
                      else
                           sDos[xx]:=(chr(ord((sDos[xx]))));
{  for xx:=1 to length(sDos) do
  if (ord(sDos[xx])>127)and(ord(sDos[xx])<160) then sDos[xx]:=(chr(ord((sDos[xx]))+64))
                      else sDos[xx]:=(chr(ord((sDos[xx]))));}
end;

procedure TForm10.Button2Click(Sender: TObject);
begin
form10.Close;
end;

procedure TForm10.FormActivate(Sender: TObject);
lABEL a1,a2;
begin
form3.sound(okk);
button3.Enabled:=false;
button4.Enabled:=false;
if form4.RadioGroup2.ItemIndex=2 then button1.Enabled:=true
                                 else button1.Enabled:=false;
assignfile(f,'Shrift/Shrift.txt');   // считывание шрифтов
{$i-}
reset(f);
{$i+}
if IOResult <> 0 then
  begin
  form3.sound(err);
  MessageDlg('Проверьте правильность пути:'+#13+
  'Shrift/Shrift.txt'+#13+'(файл с наименованиями шрифтов)'+#13+
  'Пример:'+#13+
  '1'+#13+
  'Courier New'+#13+
  'Arial',mtError,[mbOk],0);
  exit;
  end;
  s:='';
readln(f,s);
ComboBox1.clear;
while not eof(f) do
  begin
  readln(f,sDos);
  ComboBox1.Items.Add(sDos);
  end;
closefile(f);
ComboBox1.itemindex:=strtoint(s);

assignfile(f,'Shrift/Other.txt');   // считывание размера шрифтов
{$i-}
reset(f);
{$i+}
if IOResult <> 0 then
  begin
  form3.sound(err);
  MessageDlg('Проверьте правильность пути:'+#13+
  'Shrift/Other.txt'+#13+'(файл с размером шрифта,'+#13+
  'отступом сверху и слева)'+#13+
  'Пример:'+#13+
  '12'+#13+
  '1'+#13+
  '0,5'+#13+
  '0,3',mtError,[mbOk],0);
  exit;
  end;
readln(f,sDos);
edit3.Text:=sDos;
readln(f,sDos);
i:=strtoint(sDos);
if i=1 then checkbox1.checked:=true else checkbox1.checked:=false;
readln(f,sDos);
edit2.Text:=sDos;
readln(f,sDos);
edit4.Text:=sDos;
closefile(f);
                          // ВЫВОД НА ЭКРАН ПЕРВОЙ СТРАНИЦЫ БПИ
kakoi:=1;
sch:=1;

assignfile(f,form4.edit1.text);
{$i-}
reset(f);
{$i+}
if IOResult <> 0 then
  begin
  form3.sound(err);
  MessageDlg('Проверьте правильность пути:'+#13+
  form4.edit1.text,mtError,[mbOk],0);
  exit;
  end;    
readln(f,sDos);
{if sDos[1]='‘' then begin sDos[1]:='С';sDos[2]:='т';sDos[3]:='р';end else }gluk;
edit1.Text:=sDos;
for i:=0 to 66 do
  for j:=0 to 2 do StringGrid1.Cells[j,i]:='';
with StringGrid1 do Cells[0,0]:=edit1.Text;
i:=0;j:=1;
while not eof(f) do
  begin
  S:='';
  readln(f,sDos);
  {if sDos=''
  then sDos:='' else }gluk;
  if sDos=#12 then goto a2;
  if sDos<>'' then for i:=1 to 16 do
                                begin
                                if sDos[i]='' then begin StringGrid1.Cells[2,j]:='';goto a2;end;
                                StringGrid1.Cells[0,j]:=StringGrid1.Cells[0,j]+sDos[i];
                                end;
  if sDos<>'' then for i:=18 to 69 do
                                 begin
                                 S:=S+sDos[i];
                                 if sDos[i]='' then begin StringGrid1.Cells[2,j]:='';goto a2;end;
                                 StringGrid1.Cells[1,j]:=StringGrid1.Cells[1,j]+sDos[i];
                                 end;
  if sDos<>'' then for i:=71 to 78 do
                                 begin
                                 S:=S+sDos[i];
                                 if sDos[i]='' then begin StringGrid1.Cells[2,j]:='';goto a2;end;
                                 StringGrid1.Cells[2,j]:=StringGrid1.Cells[2,j]+sDos[i];
                                 end;
a2:j:=j+1;
  if sDos=#12 then begin sch:=sch+1;goto a1;end;
  end;
a1:
while not eof(f) do
  begin
  readln(f,sDos);
  j:=j+1;
  if sDos=#12 then sch:=sch+1;
  end;
closefile(f);
if sch>1 then button4.Enabled:=true else button4.Enabled:=false;
stringGrid1.SetFocus;
end;

procedure TForm10.FormClose(Sender: TObject; var Action: TCloseAction);
begin
form10.formsave;
end;

procedure TForm10.FormSave;
begin
assignfile(f,'Shrift/Shrift.txt');   // запись шрифтов
{$i-}
rewrite(f);
{$i+}
if IOResult <> 0 then
  begin
  form3.sound(err);
  MessageDlg('Проверьте правильность пути:'+#13+
  'Shrift/Shrift.txt'+#13+'(файл с наименованиями шрифтов)'+#13+
  'Пример:'+#13+
  '1'+#13+
  'Courier New'+#13+
  'Arial',mtError,[mbOk],0);
  exit;
  end;
writeln(f,ComboBox1.itemindex);
for i:=0 to ComboBox1.Items.Count-1 do  writeln(f, ComboBox1.Items[i]);
closefile(f);

assignfile(f,'Shrift/Other.txt');   // запись размера шрифтов
{$i-}
rewrite(f);
{$i+}
if IOResult <> 0 then
  begin
  form3.sound(err);
  MessageDlg('Проверьте правильность пути:'+#13+
  'Shrift/Other.txt'+#13+'(файл с размером шрифта,'+#13+
  'отступом сверху и слева)'+#13+
  'Пример:'+#13+
  '12'+#13+
  '1'+#13+
  '0,5'+#13+
  '0,3',mtError,[mbOk],0);
  exit;
  end;
writeln(f,edit3.Text);
if checkbox1.checked=true then writeln(f,'1') else writeln(f,'0');
s:=edit2.Text;
for i:=1 to length(s) do if s[i]='.' then s[i]:=',';
edit2.Text:=s;
writeln(f,{edit2.Text}s);
s:=edit4.Text;
for i:=1 to length(s) do if s[i]='.' then s[i]:=',';
edit4.Text:=s;
writeln(f,{edit4.Text}s);
//writeln(f,edit2.Text);
//writeln(f,edit4.Text);
closefile(f);
end;

procedure TForm10.Button4Click(Sender: TObject);
Label a2;
begin
//следующая стр
kakoi:=kakoi+1;
if (kakoi<sch) then button4.Enabled:=true else button4.Enabled:=false;
if (kakoi<>1) then button3.Enabled:=true else button3.Enabled:=false;
for i:=0 to 66 do
  for j:=0 to 2 do StringGrid1.Cells[j,i]:='';
assignfile(f,form4.edit1.text);
{$i-}
reset(f);
{$i+}
if IOResult <> 0 then
  begin
  form3.sound(err);
  MessageDlg('Проверьте правильность пути:'+#13+
  form4.edit1.text,mtError,[mbOk],0);
  exit;
  end;
i:=1;
repeat
readln(f,sDos);
gluk;
if sDos=#12 then i:=i+1;
until i=kakoi;
readln(f,sDos);
gluk;
edit1.Text:=sDos;
with StringGrid1 do Cells[0,0]:=edit1.Text;
j:=1;
repeat
readln(f,sDos);
gluk;
  if sDos=#12 then goto a2;
  if sDos<>'' then for i:=1 to 16 do
                                begin
                                if sDos[i]='' then begin StringGrid1.Cells[2,j]:='';goto a2;end;
                                StringGrid1.Cells[0,j]:=StringGrid1.Cells[0,j]+sDos[i];
                                end;
  if sDos<>'' then for i:=18 to 69 do
                                 begin
                                 if sDos[i]='' then begin StringGrid1.Cells[2,j]:='';goto a2;end;
                                 StringGrid1.Cells[1,j]:=StringGrid1.Cells[1,j]+sDos[i];
                                 end;
  if sDos<>'' then for i:=71 to 78 do
                                 begin
                                 if sDos[i]='' then begin StringGrid1.Cells[2,j]:='';goto a2;end;
                                 StringGrid1.Cells[2,j]:=StringGrid1.Cells[2,j]+sDos[i];
                                 end;
a2:j:=j+1;
until (sDos=#12)or(eof(f));
closefile(f);
stringGrid1.SetFocus;
end;

