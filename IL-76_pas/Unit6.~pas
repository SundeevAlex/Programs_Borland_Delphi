label a1;
begin
Form7.showmodal;
ComboBox1.clear;
s3:='Traks\Baza.txt';
a1:
assignfile(f1,s3);
 {$i-}
reset(f1);
 {$i+}
if IOResult <> 0 then begin s3:='Baza.txt';goto a1;end;  
while not eof(f1) do
  begin
  readln(f1,s3);
  ComboBox1.Items.Add(s3);
  lop:=lop+1;
  end;
closefile(f1);
if lop=0 then begin s3:='Baza.txt';goto a1;end;
