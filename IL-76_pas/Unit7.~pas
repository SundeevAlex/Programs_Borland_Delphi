begin
case Key of
#8,'0'..'9' : ; // цифры и клавиша <Backspace>
'а'..'я': key:=Chr(ord(key)-32);
'А'..'Я': ;
'A'..'Z': ;
'a'..'z': key:=Chr(ord(key)-32);
//#32 : ; // пробел
#22 : ; // Ctrl & V  вставить
#3 : ;  // Ctrl & C  копировать
'-','+','.',',','_' : ; // -
#13: if edit1.Text<>'' then edit2.setfocus;
else key := Chr(0); // остальные символы запрещены
end;
end;

procedure TForm7.ComboBox1Click(Sender: TObject);
begin
SKID;
end;

