unit Unit2;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls;

type
  TForm2 = class(TForm)
    Label1: TLabel;
    Label2: TLabel;
    Label3: TLabel;
    Edit1: TEdit;
    Edit2: TEdit;
    Button1: TButton;
    procedure Button1Click(Sender: TObject);
    procedure FormActivate(Sender: TObject);
    procedure Edit1KeyPress(Sender: TObject; var Key: Char);
    procedure Edit2KeyPress(Sender: TObject; var Key: Char);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form2: TForm2;

implementation

{$R *.dfm}

procedure TForm2.Button1Click(Sender: TObject);
begin
if (length(edit1.text)<1)or(length(edit2.text)<1) then
   begin
   edit1.SetFocus;
   exit;
   end;
if (StrToInt(edit1.text)<0)or(StrToInt(edit1.text)>359) then
   begin
   edit1.SetFocus;
   exit;
   end;
if (StrToInt(edit2.text)<0)or(StrToInt(edit2.text)>300) then
   begin
   edit2.SetFocus;
   exit;
   end;
Form2.Close;
end;

procedure TForm2.FormActivate(Sender: TObject);
begin
edit1.SetFocus;
end;

procedure TForm2.Edit1KeyPress(Sender: TObject; var Key: Char);
begin
case Key of
#8,'0'..'9' : ; // цифры и клавиша <Backspace>
#13: if length(edit1.text)>0 then edit2.SetFocus else edit1.SetFocus;
else key := Chr(0); // остальные символы запрещены
end;
end;

procedure TForm2.Edit2KeyPress(Sender: TObject; var Key: Char);
begin
case Key of
#8,'0'..'9' : ; // цифры и клавиша <Backspace>
#13: if length(edit2.text)>0 then Button1Click(Sender) else edit2.SetFocus;
else key := Chr(0); // остальные символы запрещены
end;
end;

end.
